---
// Styles
import "../styles/index.scss";

// Components
import BdFooter from "../components/Footer/BdFooter";
import BdNav from "../components/Nav/BdNav";

// Props
const { title, navFooter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Looking for exceptional landscaping services in Lincoln? Our experienced team is dedicated to transforming your outdoor space. From expert landscape designs to meticulous lawn maintenance, we offer affordable solutions that will enhance the beauty of your property. Contact us now for a free quote and let us create your dream landscape"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- <script src="https://www.google.com/recaptcha/api.js" async></script> -->
  </head>

  <body>
    {navFooter && <BdNav client:load />}

    <main class="xf-min-h-100 xf-w-100">
      <slot />
    </main>

    {navFooter && <BdFooter />}
  </body>
</html>

<script async src="https://www.googletagmanager.com/gtag/js?id=G-JMLBDBBEE0"
></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "G-JMLBDBBEE0");
</script>
