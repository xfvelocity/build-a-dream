---
// Content
import Services from "../content/services";
import Social from "../content/social";

// Components
import BdButton from "../components/Button/BdButton";
import BdBanner from "../components/Banner/BdBanner";
import HeaderCarousel from "../components/Carousel/HeaderCarousel";
import OurWorkCarousel from "../components/Carousel/OurWorkCarousel";
import ReviewsCarousel from "../components/Carousel/ReviewsCarousel";
import Layout from "../layouts/Layout.astro";

const aboutFacts = [
  {
    title: "30+",
    desc: "years experience",
  },
  {
    title: "30+",
    desc: "years experience",
  },
  {
    title: "30+",
    desc: "years experience",
  },
];
---

<!-- Home -->
<Layout>
  <div class="home-header">
    <HeaderCarousel client:load />

    <div class="home-header-text-container">
      <div class="home-header-text xf-p-6 bd-max-width">
        <h1 class="xf-text-24 xf-mb-4">
          Dream gardens that donâ€™t cost the earth
        </h1>
        <p class="xf-text-12 xf-mb-5">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent
          proin ac bibendum id ut ut suspendisse. Pharetra viverra ipsum non
          viverra consectetur.
        </p>

        <BdButton>View our work</BdButton>
      </div>
    </div>
  </div>

  <!-- About -->
  <div class="home-about">
    <div class="bd-max-width">
      <BdBanner>About us</BdBanner>

      <p class="xf-my-4">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent proin
        ac bibendum id ut ut suspendisse. Pharetra viverra ipsum non viverra
        consectetur. Praesent proin ac bibendum id ut ut suspendisse. Pharetra
        viverra ipsum non viverra consectetur.
      </p>

      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent proin
        ac bibendum id ut ut suspendisse. Pharetra viverra ipsum non viverra
        consectetur.
      </p>
    </div>

    <div class="xf-grid xf-mt-6">
      {
        aboutFacts.map((fact, i) => (
          <div
            class={`home-about-item xf-bg-primary xf-p-3 xf-text-center ${
              i == 2 ? "xf-col-12" : "xf-col-6"
            }`}
          >
            <h4 class="xf-text-colour-white xf-text-20">{fact.title} </h4>
            <p class="xf-text-colour-grey-lighten-1">{fact.desc} </p>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Services -->
  <div class="home-services">
    <div class="home-services-content bd-max-width xf-py-10">
      <div class="xf-text-center">
        <h2>Our Services</h2>
        <p>We provide a diverse range of services, some of which include:</p>
      </div>

      <div class="home-services-item-container xf-mt-6">
        {
          Services.map((service) => (
            <div class={`home-services-item xf-p-6 xf-mb-2`}>
              <div class="xf-flex xf-flex-align-items-center xf-mb-3">
                <div
                  class={`home-services-item-icon xf-mr-2 xf-bg-${service.colour}`}
                >
                  <img
                    class="xf-center"
                    src={service.icon}
                    alt=""
                    height="14"
                  />
                </div>

                <h3 class="xf-text-20 xf-mb-0">{service.title}</h3>
              </div>

              <p class="xf-text-12">{service.text}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Our work -->
  <div class="home-our-work">
    <div class="bd-max-width xf-py-15">
      <OurWorkCarousel client:load />
    </div>
  </div>

  <!-- Contact us -->
  <a id="contact"></a>
  <div class="home-contact">
    <div class="bd-max-width xf-pt-10 xf-pb-15">
      <div class="xf-text-center">
        <h3 class="xf-text-24">Looking for a free quote?</h3>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipi elit. Praesent proin ac
          bibendum.
        </p>
      </div>

      <div class="xf-pl-4 xf-my-8">
        {
          Social.map((s) => (
            <a href={s.href} target="_blank" aria-label={s.title}>
              <div class="xf-flex xf-flex-align-items-center xf-mb-3">
                <div class="home-contact-icon xf-bg-white xf-mr-3">
                  <img class="xf-center" src={s.icon} alt="" />
                </div>

                <div>
                  <h4>{s.title}</h4>
                  <p>{s.text}</p>
                </div>
              </div>
            </a>
          ))
        }
      </div>

      <div
        class="xf-bg-white home-contact-form xf-text-colour-secondary xf-p-6 xf-pb-8 xf-w-100"
      >
        <div class="xf-mb-3">
          <label>Name</label>
          <input type="text" placeholder="John Smith" />
        </div>

        <div class="xf-mb-3">
          <label>Email Address</label>
          <input type="text" placeholder="john@gmail.com" />
        </div>

        <div class="xf-mb-3">
          <label>Phone Number</label>
          <input type="text" placeholder="07400 820600" />
        </div>

        <div class="xf-mb-1">
          <label>Message</label>
          <textarea placeholder="Write your query here.." rows={5}></textarea>
        </div>

        <BdButton backgroundColour="primary" textColour="white" fullWidth>
          Send your message
        </BdButton>
      </div>
    </div>
  </div>

  <!-- Reviews -->
  <div class="home-reviews xf-pt-15 xf-pb-10">
    <div class="bd-max-width">
      <ReviewsCarousel client:load />
    </div>
  </div>
</Layout>

<style lang="scss" is:global>
  @import "../styles/index.scss";

  #contact {
    scroll-margin-top: 80px;
  }

  .home {
    &-header {
      --swiper-pagination-bullet-inactive-color: #e0e0e0;
      --swiper-pagination-bullet-inactive-opacity: 1;
      --swiper-pagination-color: #0c9900;

      .swiper-pagination {
        top: initial;
        bottom: 60px !important;
      }

      &-text {
        position: relative;
        top: -50px;
        background: linear-gradient(153.19deg, #053f00 11.14%, #065000 100%);
        color: white;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        z-index: 5;
      }

      &-text-container {
        background: url("../images/home/about-top-bg.png");
        position: relative;
        top: -10px;
      }
    }

    &-about {
      background: url("../images/home/about-bottom-bg.png");
      background-size: contain;
      background-repeat: no-repeat;
      background-position: bottom;
      padding-bottom: 80px;

      &-item {
        border-radius: 5px;
      }
    }

    &-services {
      background: url("../images/home/services-bg.png"),
        linear-gradient(153.19deg, #053f00 11.14%, #065000 100%);
      color: white;

      &-item {
        border-radius: 5px;
        background: rgba(0, 0, 0, 0.5);
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);

        &-icon {
          position: relative;
          width: 25px;
          height: 25px;
          border-radius: 5px;
          box-shadow: 4px 4px 4px 4px rgba(106, 106, 106, 0.1);
        }
      }
    }

    &-our-work {
      --swiper-pagination-bullet-inactive-color: #9e9e9e;
      --swiper-pagination-bullet-inactive-opacity: 1;
      --swiper-pagination-color: #{map-get($xf-colours, "primary")};
      --swiper-pagination-bullet-width: 12px;
      --swiper-pagination-bullet-height: 12px;

      background: url("../images/home/about-top-bg.png");
      background-repeat: no-repeat;

      // .our-work-carousel {
      //   position: relative;
      //   width: 100%;

      //   .prev-arrow,
      //   .next-arrow {
      //     position: absolute;
      //     bottom: 4px;
      //     z-index: 10;
      //     cursor: pointer;
      //   }

      //   .prev-arrow {
      //     left: 0;
      //   }

      //   .next-arrow {
      //     right: 0;
      //   }
      // }

      img {
        border-radius: 5px;
      }
    }

    &-contact {
      background: url("../images/home/services-bg.png"),
        linear-gradient(153.19deg, #053f00 11.14%, #065000 100%);
      color: white;

      a {
        text-decoration: none;
      }

      &-form {
        border-radius: 5px;
      }

      &-icon {
        position: relative;
        width: 40px;
        height: 40px;
        border-radius: 5px;
      }

      label {
        font-size: 14px;
        font-weight: 400;
      }

      input,
      textarea {
        margin-top: 3px;
        border: 1px solid #dfdfdf;
        background: #ececec;
        padding: 15px 10px;
        border-radius: 5px;
        width: 100%;
      }

      textarea {
        resize: none;
      }
    }

    &-reviews {
      --swiper-pagination-bullet-inactive-color: #b3b3b3;
      --swiper-pagination-bullet-inactive-opacity: 1;
      --swiper-pagination-color: #{map-get($xf-colours, "primary")};
      --swiper-pagination-bullet-width: 12px;
      --swiper-pagination-bullet-height: 12px;

      background: url("../images/home/about-bottom-bg.png");
      background-repeat: no-repeat;
      background-position: bottom;

      .reviews-carousel {
        position: relative;
      }

      p {
        letter-spacing: 0.07em !important;
      }

      .start-quote {
        position: absolute;
        top: 0px;
        left: 0;
      }

      .end-quote {
        position: absolute;
        bottom: 8px;
        right: 0;
      }
    }
  }
</style>
